                },
                {
                    value: "OTHER",
                    text: contentLookup.jobSector["OTHER"]
                }  
              ],
              errorMessage: errors.sector
            }) 
          }}

          {{ govukSelect({
              id: "industrySector",
              name: "industrySector",
              value: industrySector,
              label: {
                text: 'HMPPS reporting industry sector'
              },
              items: [
                {
