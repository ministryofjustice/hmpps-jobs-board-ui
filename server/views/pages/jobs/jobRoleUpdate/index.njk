  <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <span class="govuk-caption-l" data-qa="headerCaption">{{ 'Add' if mode === 'add' else 'Update' }} a job - step 1 of 5</span>
        <h1 class="govuk-heading-l">
          {{ title }}
        </h1>

        <form class="form" method="post" novalidate="">
          <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

          {{ accessibleAutocomplete({
            id: 'employerId', 
            label: 'Employer name',
            hint: 'Start typing the name of the employer.',
            list: employers,
            value: employerId,
            errorMessage: errors.employerId,
            class: 'govuk-!-margin-bottom-4',
            nonce: cspNonce 
            }) 
          }}

          {% set detailsHtml %}
            <div>You must <a href="{{ addressLookup.employers.employerUpdate('new') }}" class="govuk-link govuk-link--no-visited-state">add the employer</a> before adding a job. Any data you've already entered on this screen will be lost. </div>
          {% endset -%}

          {{ govukDetails({
            summaryText: "The employer is not listed",
            html: detailsHtml
          }) }}

          {{ govukInput({
              id: "jobTitle",
              name: "jobTitle",
              value: jobTitle | safe,
              type: "text",
              label: {
                text: "Job Title"
              },
              errorMessage: errors.jobTitle
            })
          }}

          {{ govukSelect({
              id: "sector",
